#!/bin/bash

python -c "import platform;print(platform.platform())"

whatweant="tcpdump"
pm=""

yum='yum install -y ' 
apt='apt install -y '

if [ -f /etc/os-release ]; then
    OS=$NAME
    VER=$VERSION_ID
    if [[ 'debian' = 'OS' ]];then
        pm=$apt
    fi
fi

if type lsb_release >/dev/null 2>&1; then
    # linuxbase.org
    OS=$(lsb_release -si)
    VER=$(lsb_release -sr)
    pm=
fi

if [ -f /etc/lsb-release ]; then
    # For some versions of Debian/Ubuntu without lsb_release command
    . /etc/lsb-release
    OS=$DISTRIB_ID
    VER=$DISTRIB_RELEASE
fi


if [ -f /etc/redhat-release ]; then
    pm=$yum
fi

if [[ -n "$pm" ]]; then
$pm $whatwewant;
fi
